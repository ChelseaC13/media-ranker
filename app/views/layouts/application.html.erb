        <button type="button"class="btn btn-link" >
          <%= link_to "Add a new work", new_work_path %>
        </button>
      </div>

      <div class="btn-group ">
        <button type="button"class="btn btn-link" >
          View all users
        </button>
      </div>
      
      <button  class="btn btn-primary">
        logged in to implement
      </button>

      <button type="button" class="btn btn-primary">
        Log Out
      </button>
   
