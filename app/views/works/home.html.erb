                <span class="green_title"><%= work_group[i].title %></span> <span class="gray_creator">by <%=work_group[i].creator%></span>
                <p>num of votes<p>
            <% end %>
        </ul>
    </div>
    <div class="col-sm">
      <h3 class="column_header">Top Albums</h3>
        <ul>
            <% work_group = @work.where("category = ?", "album")%>
            <% 10.times do |i| %>
                <span class="green_title"><%= work_group[i].title %></span> <span class="gray_creator">by <%=work_group[i].creator%></span>
                <p>num of votes<p>
            <% end %>
        </ul>
    </div>
  </div>
</div>

